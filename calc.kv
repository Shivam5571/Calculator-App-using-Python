#:kivy 2.1.0

<MyLayout>:
    orientation: 'vertical'
    padding: 20
    spacing: 10
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        id: result
        text: ""
        font_size: 50
        size_hint_y: 0.3
        halign: "right"
        valign: "middle"
        text_size: self.size
        color: 1, 1, 1, 1

    GridLayout:
        cols: 4
        spacing: 10
        size_hint_y: 0.7

        # First row
        Button:
            text: "AC"
            on_press: root.clear()
            background_normal: ''
            background_color: 0.6, 0.6, 0.6, 1
            font_size: 32
        Button:
            text: "±"
            on_press: root.plus_minus()
            background_normal: ''
            background_color: 0.6, 0.6, 0.6, 1
            font_size: 32
        Button:
            text: "%"
            on_press: root.button_press('%')
            background_normal: ''
            background_color: 0.6, 0.6, 0.6, 1
            font_size: 32
        Button:
            text: "÷"
            on_press: root.button_press('/')
            background_normal: ''
            background_color: 1, 0.6, 0, 1
            font_size: 32

        # Second row
        Button:
            text: "7"
            on_press: root.button_press('7')
            background_normal: ''
            background_color: 0.2, 0.2, 0.2, 1
            font_size: 32
        Button:
            text: "8"
            on_press: root.button_press('8')
            background_normal: ''
            background_color: 0.2, 0.2, 0.2, 1
            font_size: 32
        Button:
            text: "9"
            on_press: root.button_press('9')
            background_normal: ''
            background_color: 0.2, 0.2, 0.2, 1
            font_size: 32
        Button:
            text: "×"
            on_press: root.button_press('*')
            background_normal: ''
            background_color: 1, 0.6, 0, 1
            font_size: 32

        # Third row
        Button:
            text: "4"
            on_press: root.button_press('4')
            background_normal: ''
            background_color: 0.2, 0.2, 0.2, 1
            font_size: 32
        Button:
            text: "5"
            on_press: root.button_press('5')
            background_normal: ''
            background_color: 0.2, 0.2, 0.2, 1
            font_size: 32
        Button:
            text: "6"
            on_press: root.button_press('6')
            background_normal: ''
            background_color: 0.2, 0.2, 0.2, 1
            font_size: 32
        Button:
            text: "-"
            on_press: root.button_press('-')
            background_normal: ''
            background_color: 1, 0.6, 0, 1
            font_size: 32

        # Fourth row
        Button:
            text: "1"
            on_press: root.button_press('1')
            background_normal: ''
            background_color: 0.2, 0.2, 0.2, 1
            font_size: 32
        Button:
            text: "2"
            on_press: root.button_press('2')
            background_normal: ''
            background_color: 0.2, 0.2, 0.2, 1
            font_size: 32
        Button:
            text: "3"
            on_press: root.button_press('3')
            background_normal: ''
            background_color: 0.2, 0.2, 0.2, 1
            font_size: 32
        Button:
            text: "+"
            on_press: root.button_press('+')
            background_normal: ''
            background_color: 1, 0.6, 0, 1
            font_size: 32

        # Last row
        Button:
            text: "0"
            on_press: root.button_press('0')
            background_normal: ''
            background_color: 0.2, 0.2, 0.2, 1
            font_size: 32
        Button:
            text: "."
            on_press: root.button_press('.')
            background_normal: ''
            background_color: 0.2, 0.2, 0.2, 1
            font_size: 32
        Button:
            text: "="
            on_press: root.calculate()
            background_normal: ''
            background_color: 1, 0.6, 0, 1
            font_size: 32
